<style>
    .hidden {
        display: none;
    }
</style>

<div class="card" style="width: 25rem; height:33rem; background-color:#87CEEB; margin-left:20px">
    <form method="post" action="/editProfile">
        <div class="mb-auto px-5">
            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" name="name"/>
            <label for="location" class="form-label">Location:</label>
            <input type="text" class="form-control" name="location"/>
            <label for="bio" class="form-label">Bio:</label>
            <input type="text" class="form-control" name="bio"/>
        </div>
        <div class="mb-auto px-5">
            <br>
            <button id="save_button" type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </form>

  </div>
</div>







<form method="post" action="/editProfile" id="profile_editor" class="hidden">
    <div class="mb-auto px-5">
        <label for="name" class="form-label">Name:</label>
        <input type="text" class="form-control" name="name"/>
        <label for="location" class="form-label">Location:</label>
        <input type="text" class="form-control" name="location"/>
        <label for="bio" class="form-label">Bio:</label>
        <input type="text" class="form-control" name="bio"/>
    </div>
    <div class="mb-auto px-5">
        <br>
        <button id="submit_edits_button" type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<script>
    var editProfileButton = document.getElementById('openFormButton');
    var form = document.getElementById('profile_editor');

    editProfileButton.addEventListener('click', function() {
        // Toggle the visibility of the form
        form.classList.toggle('hidden');
    });

</script>