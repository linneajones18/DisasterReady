<!DOCTYPE html>
<html>
<h1> Current Reports For Review:</h1>
    <div id="incident_reports">
        <table>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {{!-- using "this" and loop to gather all reports and add post/deny button to each--}}
            {{#each incident_reports}}
            <tr>
                <td>{{location}}</td>    
                <td>{{incident_type}}</td>
                <td>{{details}}</td>
                <td>{{latitude}}</td>
                <td>{{longitude}}</td>
                <td>{{reported_at}}</td>
                <td>
                    {{#if resolved}}
                    <form method="post" action="/adminalerts/approve">
                        <input type="hidden" name="report" value={{course_id}}>
                        <button type="button" value="disabled" disabled>Approve</button>
                    </form>
                    {{else}}
                    <form method="post" action="/adminalerts/approve">
                        <input type="hidden" name="report" value={{course_id}}>
                        <button type="submit" >Approve</button>
                    </form>
                    {{/if}}
                </td>
            </tr>
            {{/each}}  
        </table>
    </div>
</html>

{{>footer}}